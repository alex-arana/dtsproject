<?xml version="1.0" encoding="UTF-8"?>
<mjsdl:submitJobRequest xmlns:mjsdl="http://schemas.dataminx.org/dts/2009/07/messages"
    xmlns:jsdl="http://schemas.ggf.org/jsdl/2005/11/jsdl"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dmi="http://schemas.ogf.org/dmi/2008/05/dmi"
    xmlns:wsse="http://docs.oasis-open.org/wss/2004/01/oasis-200401-wss-wssecurity-secext-1.0.xsd"
    xsi:noNamespaceSchemaLocation="minx-dts-messages.xsd">

  <jsdl:JobDefinition>
    <!--
      For some unknown reason, namespace definitions should be set in the JobDescription element again
    -->
    <jsdl:JobDescription xsi:type="mjsdl:MinxJobDescriptionType" xmlns:mjsdl="http://schemas.dataminx.org/dts/2009/07/jsdl"
      xmlns:jsdl="http://schemas.ggf.org/jsdl/2005/11/jsdl">
      <jsdl:JobIdentification>
        <jsdl:JobName>testjob</jsdl:JobName>
        <jsdl:Description>Gerson's Job</jsdl:Description>
        <jsdl:JobAnnotation>Gerson's Job Annotation</jsdl:JobAnnotation>
        <jsdl:JobProject>apollo33</jsdl:JobProject>
      </jsdl:JobIdentification>
       
      <mjsdl:DataTransfer>
        <mjsdl:Source>
          <jsdl:URI>file://etc/passwd</jsdl:URI>
        </mjsdl:Source>
        <mjsdl:Target>
          <jsdl:URI>file://tmp/passwd.copy</jsdl:URI>
        </mjsdl:Target>
        <mjsdl:TransferRequirements>
          <dmi:MaxAttempts>0</dmi:MaxAttempts>
          <jsdl:CreationFlag>overwrite</jsdl:CreationFlag>
        </mjsdl:TransferRequirements>
      </mjsdl:DataTransfer>    
    </jsdl:JobDescription>
  </jsdl:JobDefinition>
</mjsdl:submitJobRequest>
